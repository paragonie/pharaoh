<?xml version="1.0"?>
<psalm
    name="Pharaoh Type Safety Automated Analysis"
    useDocblockTypes="true"
    totallyTyped="true"
>
    <projectFiles>
        <directory name="src/Pharaoh" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <UnusedVariable errorLevel="info" />
        <UnnecessaryVarAnnotation errorLevel="info" />
    </issueHandlers>
</psalm>
